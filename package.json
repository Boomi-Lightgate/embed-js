{
  "name": "@boomi/embed-js",
  "private": false,
  "version": "1.0.0",
  "license": "Apache-2.0",
  "description": "A JavaScript library for embedding Boomi EmbedJS into an application.",
  "type": "module",
  "main": "embed-js.js",
  "files": [
    "/dist"
  ],
  "exports": {
    ".": "./dist/embed-js.js",
    "./embed-js.js": "./dist/embed-js.js",
    "./embed-js.css": "./dist/embed-js.css"
  },
  "types": "./dist/main.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "genSdk": "npx openapi-typescript-codegen -i ./platformopenapi.json -o ./src/service --name Boomi -c axios",
    "build:css": "vite build --config vite.css.config.ts",
    "build:docs": "rm -rf docs-md && npm link @boomi/embed-js-node && npm run build && npx typedoc"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.4",
    "axios": "^1.11.0",
    "classnames": "^2.5.1",
    "data-fns": "^1.1.0",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.6",
    "framer-motion": "^12.23.6",
    "openai": "^5.10.2",
    "openapi-typescript-codegen": "^0.29.0",
    "os": "^0.1.2",
    "path": "^0.12.7",
    "react": "^19.0.0",
    "react-ace": "^14.0.1",
    "react-dom": "^19.0.0",
    "react-xarrows": "^2.0.2",
    "sweetalert2": "^11.19.1",
    "sweetalert2-react-content": "^5.1.0",
    "winston": "^3.17.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@headlessui/react": "^2.2.1",
    "@tailwindcss/vite": "^4.1.3",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/winston": "^2.4.4",
    "@vitejs/plugin-react": "^4.3.4",
    "dotenv": "^16.4.7",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "postcss-preset-env": "^10.1.5",
    "prettier": "^3.5.3",
    "react-icons": "^5.5.0",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.3",
    "typedoc-plugin-markdown": "^4.7.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "vite-plugin-clean": "^2.0.1",
    "vitest": "^3.1.1"
  }
}
