{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "esnext",
    "target": "ES2017",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "allowJs": true
  },
  "include": ["src", "service"],
  "lib": ["dom", "ES2017"]
}
